    <script>

    let logoVisual = jQuery('.fixed-wrap').height();

    let webJs = function () {
        jQuery('.wrap').css('padding-top', logoVisual + 144 + 'px');

        jQuery(window).resize(function(){
            logoVisual = jQuery('.fixed-wrap').height();
            jQuery('.wrap').css('padding-top', logoVisual + 144 + 'px');
            if($('header').hasClass('top')){
                jQuery('.wrap').css('padding-top', logoVisual + 208 + 'px');
            }
        });

        jQuery('.logo-visual').mousemove(function(event){
            let visualWidth = jQuery('.logo-visual').width();
            let wrapPadding = jQuery('.inner-wrap').css('padding-left').replace('px', '');
            wrapPadding = parseInt(wrapPadding);

            // 이미지 개수
            let totalImg = 6;
            let slideImg = visualWidth/totalImg;

            if(event.clientX <= slideImg + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(2)").css('z-index', '1');
            }else if(event.clientX <= slideImg*2 + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(3)").css('z-index', '1');
            }else if(event.clientX <= slideImg*3 + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(4)").css('z-index', '1');
            }else if(event.clientX <= slideImg*4 + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(5)").css('z-index', '1');
            }else if(event.clientX <= slideImg*5 + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(6)").css('z-index', '1');
            }else if(event.clientX <= slideImg*6 + wrapPadding){
                $(".logo-visual .ani-img img").css('z-index', '0');
                $(".logo-visual .ani-img img:nth-child(7)").css('z-index', '1');
            }
        })
        // default 이미지
        jQuery('.logo-visual').mouseout(function(event){
            $(".logo-visual .ani-img img").css('z-index', '0');
            $(".logo-visual .ani-img img:nth-child(1)").css('z-index', '1');
        });
        jQuery('.grid').masonry({
            itemSelector: '.grid-item',
            horizontalOrder: true,
        });
    }


    let mobileJs = function(){
        jQuery('.grid').masonry('destroy');
        jQuery('.wrap').css('padding-top', logoVisual + 48 + 'px');

        jQuery(window).resize(function(){
            logoVisual = jQuery('.fixed-wrap').height();
            jQuery('.wrap').css('padding-top', logoVisual + 48 + 'px');
            if($('header').hasClass('top')){
                jQuery('.wrap').css('padding-top', logoVisual + 106 + 'px');
            }
        });

        let index = 0;
        slideShow();
        
        function slideShow() {
            let i;
            let visualImgx = jQuery('.logo-visual .ani-img .img-box img');
            for (i = 0; i < visualImgx.length; i++) {
                visualImgx[i].style.display = "none";
            }
            index++;
            if (index > visualImgx.length) {
                index = 1;
            }   
            visualImgx[index-1].style.display = "block";
            setTimeout(slideShow, 1500);
        }                    
    }

    jQuery(document).ready(function(){
        logoVisual = jQuery('.fixed-wrap').height();
        // console.log('ready - logoVisual');
        // console.log(logoVisual);

        // home logo
        jQuery(window).scroll(function(){
            let keyVisual = jQuery('.key-visual').offset().top;
            let windowScrollTop = jQuery(window).scrollTop();
            if(windowScrollTop >= keyVisual){
                jQuery('header.home-header h1').addClass('on');
            }else{
                jQuery('header.home-header h1').removeClass('on');
            }                
        });
        $(window).resize(function() {
            if($(window).width() >= 901) {
                webJs();
            }else{
                mobileJs();
            }
        });
    });
                    
    $(window).on('load', function(){
        logoVisual = jQuery('.fixed-wrap').height();
        // console.log('load - logoVisual');
        // console.log(logoVisual);

        if($(window).width() >= 901) {
            webJs();
            jQuery(window).scroll(function(){
                if($('header').hasClass('hide')){                    
                    jQuery('.wrap').css('padding-top', logoVisual + 208 + 'px');
                }else{
                    jQuery('.wrap').css('padding-top', logoVisual + 144 + 'px');
                }

                if($('header').hasClass('top')){                    
                    jQuery('.wrap').css('padding-top', logoVisual + 208 + 'px');
                }
            })
        }else{
            mobileJs();
            jQuery(window).scroll(function(){
                if($('header').hasClass('hide')){                    
                    jQuery('.wrap').css('padding-top', logoVisual + 106 + 'px');
                }else{
                    jQuery('.wrap').css('padding-top', logoVisual + 48 + 'px');
                }

                if($('header').hasClass('top')){                    
                    jQuery('.wrap').css('padding-top', logoVisual + 106 + 'px');
                }
            })
        }       
    })

